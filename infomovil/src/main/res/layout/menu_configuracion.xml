<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.infomovil.infomovil.gui.common.TextWithFont
                android:id="@+id/labelConfiguracion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:textColor="@color/colorFuenteVerde"
                android:textSize="19sp" />

            <com.infomovil.infomovil.gui.widget.TableView
                android:id="@+id/tablaConfiguracion1"
                style="@style/UITableView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/labelConfiguracion"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp" >
            </com.infomovil.infomovil.gui.widget.TableView>

            <com.infomovil.infomovil.gui.widget.TableView
                android:id="@+id/tablaConfiguracion2"
                style="@style/UITableView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tablaConfiguracion1"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp" >
            </com.infomovil.infomovil.gui.widget.TableView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:gravity="center"
    android:fadeScrollbars="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
    	android:gravity="center" >

        <com.infomovil.infomovil.gui.common.TextWithFont
            android:layout_marginTop="25dp"
            android:id="@+id/compartir_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="@string/menu_compartir_titulo"
            android:textColor="@color/colorFuenteVerde"
            android:textSize="19sp" />

        <RelativeLayout
            android:id="@+id/layoutGaleria"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignLeft="@+id/compartir_titulo"
            android:layout_below="@+id/compartir_titulo"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_border" >

            <com.infomovil.infomovil.gui.common.TextWithFont
                android:id="@+id/label1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="@string/menu_compartir_label1"
                android:textColor="@color/colorFuenteAzul"
                android:textSize="19sp" />

            <com.infomovil.infomovil.gui.common.TextWithFont
                android:id="@+id/label2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/label1"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:textColor="@color/colorFuenteAzul"
                android:textSize="19sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_below="@+id/layoutGaleria"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:background="@drawable/google"
            android:onClick="compartirGoogle" />

        <Button
            android:id="@+id/button5"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_alignLeft="@+id/button2"
            android:layout_below="@+id/button2"
            android:layout_marginTop="17dp"
            android:background="@drawable/sms"
            android:onClick="compartirSms" />

        <Button
            android:id="@+id/button3"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_alignRight="@+id/layoutGaleria"
            android:layout_alignTop="@+id/botonEliminar"
            android:background="@drawable/twitter"
            android:onClick="compartirTwitter" />

        <Button
            android:id="@+id/button4"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_alignBaseline="@+id/button5"
            android:layout_alignBottom="@+id/button5"
            android:layout_alignLeft="@+id/layoutGaleria"
            android:background="@drawable/email"
            android:onClick="compartirEmail" />

        <Button
            android:id="@+id/botonEliminar"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_alignLeft="@+id/layoutGaleria"
            android:layout_alignTop="@+id/button2"
            android:background="@drawable/facebbok"
            android:onClick="compartirFacebook" />

        <Button
            android:id="@+id/button6"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_alignBaseline="@+id/button5"
            android:layout_alignBottom="@+id/button5"
            android:layout_alignLeft="@+id/button3"
            android:background="@drawable/whatsapp"
            android:onClick="compartirWhatsapp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@+id/button4"
            android:background="@color/colorBackground" >
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>
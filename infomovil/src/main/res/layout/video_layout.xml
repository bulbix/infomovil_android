<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollVideo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:fadeScrollbars="false" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical" >

        <com.infomovil.infomovil.gui.common.TextWithFont
            android:id="@+id/labelBuscarYoutube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtSeleccionaVideo"
            android:textColor="@color/colorFuenteVerde"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/imgYoutube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/btnyoutube" />

        <com.infomovil.infomovil.gui.common.TextWithFont
            android:id="@+id/labelURLYoutube"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:text="@string/txtURLVideo"
            android:textColor="@color/colorFuenteVerde"
            android:textSize="19sp" />

        <com.infomovil.infomovil.gui.common.EditTextWithFont
            android:id="@+id/txtVideo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_border"
            android:inputType="text"
            android:maxLength="255"
            android:paddingLeft="10dp"
            android:textColor="@color/colorFuenteAzul"
            android:textSize="19sp" />

        <com.infomovil.infomovil.gui.common.ButtonWithFont
            android:id="@+id/btnBuscarVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_buscar_vid"
            android:onClick="buscarVideo"
            android:text="@string/action_search"
            android:textColor="@color/colorBlanco"
            android:textSize="19sp" />
    </LinearLayout>

</ScrollView>
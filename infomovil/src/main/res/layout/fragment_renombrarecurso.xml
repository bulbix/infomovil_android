<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
      <com.infomovil.infomovil.gui.common.TextWithFont
        android:id="@+id/lblNombreRecurso"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/colorFuenteAzul"
        android:textSize="19sp" 
        android:layout_centerHorizontal="true" />
      
     <com.infomovil.infomovil.gui.common.TextWithFont
        android:id="@+id/lblMensaje"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lblNombreRecurso"
        android:layout_marginTop="20dp"
        android:text="@string/txtTerminarProceso"
        android:textColor="@color/colorFuenteVerde"
        android:textSize="19sp"
        android:gravity="center_horizontal" />
      
    <com.infomovil.infomovil.gui.common.TextWithFont
        android:id="@+id/lblWWWNombrar"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textColor="@color/colorFuenteAzul"
        android:textSize="19sp"
        android:layout_below="@+id/lblMensaje"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:gravity="center_vertical"
        android:text="" />
    
    <com.infomovil.infomovil.gui.common.EditTextWithFont
        android:id="@+id/txtNombreRecurso"
        android:layout_width="200dp"
        android:maxLength="255"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_height="35dp"
        android:layout_below="@+id/lblMensaje"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/lblWWWNombrar"
        android:textColor="@color/colorFuenteAzul"
        android:textSize="19sp"
        android:hint="@string/txtMisitio"
        android:inputType="text|textEmailAddress"
        android:background="@drawable/rounded_border" /> 
    

</RelativeLayout>
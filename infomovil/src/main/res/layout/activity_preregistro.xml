<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparente"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp">

    <com.facebook.widget.LoginButton
        android:id="@+id/authButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btnazul"
        android:layout_marginTop="20dp"
        android:gravity="center"
        fb:fetch_user_info="true"
        fb:login_text="@string/txtRegistroFacebook" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/lineamenu" />

    <com.infomovil.infomovil.gui.common.ButtonWithFont
        android:id="@+id/btnCrearCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btnblanco2"
        android:onClick="crearCuenta"
        android:text="@string/txtCrearCuenta"
        android:textColor="@color/colorBlanco"
        android:textSize="18sp" />

    <com.infomovil.infomovil.gui.common.TextWithFont
        android:id="@+id/lblPermisoFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:lines="3"
        android:text="@string/txtPermisoFacebook"
        android:textColor="@color/colorBlanco"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
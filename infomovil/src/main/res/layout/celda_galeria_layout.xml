<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="63dip"
    android:paddingLeft="10dip"
    android:background="@drawable/rounded_border" 
    android:id="@+id/layout_celda" >
    
    <ImageView
        android:id="@+id/drag_handleImage"
    	android:background="@drawable/barraedit"
    	android:layout_width="40dp"
        android:layout_height="15dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />
    
    <ImageView
        android:id="@+id/bitmapImagenGaleria"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp" />
    
    <com.infomovil.infomovil.gui.common.TextWithFont
        android:id="@+id/textoTituloFoto"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bitmapImagenGaleria"
        android:layout_marginLeft="5dp"
        android:lines="1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorFuenteAzul"
        android:textSize="19sp" />

    <com.infomovil.infomovil.gui.common.TextWithFont
        android:id="@+id/labelPeso"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textoTituloFoto"
        android:layout_alignTop="@+id/bitmapImagenGaleria" />

    <com.infomovil.infomovil.gui.common.TextWithFont
        android:id="@+id/labelPesoNumero"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/labelPeso"
        android:layout_alignBottom="@+id/labelPeso"
        android:layout_alignParentRight="true" />

</RelativeLayout>

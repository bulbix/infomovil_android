<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:fadeScrollbars="false"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >

        <com.infomovil.infomovil.gui.common.TextWithFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/txtCreaNombreSitioWeb"
            android:textColor="@color/colorFuenteVerde"
            android:textSize="22sp" />

        <com.infomovil.infomovil.gui.common.TextWithFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/txtElijeDominio"
            android:textColor="@color/colorFuenteVerde"
            android:textSize="19sp" />

        <Spinner
            android:id="@+id/dominios_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <com.infomovil.infomovil.gui.common.TextWithFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/txtElijeNombre"
            android:textColor="@color/colorFuenteVerde"
            android:textSize="19sp" />

        <LinearLayout
            android:id="@+id/layoutDominio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <com.infomovil.infomovil.gui.common.TextWithFont
                android:id="@+id/lblDominio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.infomovil.com/"
                android:textColor="@color/colorFuenteAzul"
                android:textSize="19sp" />

            <com.infomovil.infomovil.gui.common.EditTextWithFont
                android:id="@+id/txtNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/txtMisitio"
                android:inputType="text"
                android:maxLength="255"
                android:textColor="@color/colorFuenteAzul"
                android:textSize="19sp" />
        </LinearLayout>

        <com.infomovil.infomovil.gui.common.ButtonWithFont
            android:id="@+id/btnBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btnverdeslim2"
            android:layout_gravity="center"
            android:onClick="buscarSitio"
            android:text="@string/action_search"
            android:textColor="@color/colorBlanco"
            android:textSize="19sp" />
    </LinearLayout>

</ScrollView>
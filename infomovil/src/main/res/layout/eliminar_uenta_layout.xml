<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.infomovil.infomovil.gui.common.TextWithFont
        android:id="@+id/labelEliminarCuenta"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorFuenteVerde"
        android:textSize="19sp" />
    
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/labelEliminarCuenta" />
    
    <com.infomovil.infomovil.gui.common.TextWithFont
        android:id="@+id/labelEspecifica"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorFuenteVerde"
        android:textSize="19sp" />
    
    <com.infomovil.infomovil.gui.common.EditTextWithFont
        android:id="@+id/txtEspecifica"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:maxLength="255"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_border"
        android:layout_below="@+id/labelEspecifica"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="@color/colorFuenteAzul"
        android:textSize="19sp" />

    <com.infomovil.infomovil.gui.common.TextWithFont
        android:id="@+id/labelContrasenaEliminar2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
 		android:layout_below="@+id/txtEspecifica"
 		android:layout_centerHorizontal="true"
 		android:layout_marginTop="15dp"
        android:textColor="@color/colorFuenteVerde"
        android:textSize="19sp" />
    
    <com.infomovil.infomovil.gui.common.EditTextWithFont
        android:id="@+id/txtContrasena"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:maxLength="255"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/labelContrasenaEliminar2"
        android:background="@drawable/rounded_border"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColor="@color/colorFuenteAzul"
        android:textSize="19sp" />
    
      <com.infomovil.infomovil.gui.common.ButtonWithFont 
        android:id="@+id/txtOlvidastePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtContrasena"
        android:layout_marginTop="3dp"
        android:background="@color/colorTransparente"
        android:text="@string/txtOlvidarPass"
        android:textColor="@color/colorFuenteVerde"
        android:textSize="17sp"
        android:layout_alignRight="@+id/txtContrasena"
        android:onClick="recuperarPassword" />
    
    

</RelativeLayout>
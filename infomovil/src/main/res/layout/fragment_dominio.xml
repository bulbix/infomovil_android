<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">
    
     <com.infomovil.infomovil.gui.common.TextWithFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorFuenteVerde"
        android:text="@string/txtDominioActual"
        android:layout_marginTop="20dp"
        android:textSize="19sp" />

    <com.infomovil.infomovil.gui.common.TextWithFont
        android:id="@+id/labelDominio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorFuenteAzul"
        android:layout_marginTop="20dp"
        android:textSize="19sp" />
    
     <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/line_verde" />
   
     <com.infomovil.infomovil.gui.common.TextWithFont
        android:id="@+id/labelAdquiereTel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorFuenteVerde"
        android:text="@string/txtAdquiereTel1"
        android:lines="3"
        android:layout_marginLeft="30dp"
    	android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:textSize="19sp" />
     
     
     <com.infomovil.infomovil.gui.common.TextWithFont
        android:id="@+id/labelPrecioTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorFuenteAzul"
        android:layout_marginTop="20dp"
        android:textSize="19sp" />

    <com.infomovil.infomovil.gui.common.ButtonWithFont
        android:id="@+id/btnComprarTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btnverdeslim2"
        android:onClick="comprarTelnames"
        android:text="@string/txtComprarTel"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorBlanco" />

</LinearLayout>